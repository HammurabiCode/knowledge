    <li class="comment-item" data-cid="1047920936">
        <div class="comment">
            <h3>
                <span class="comment-vote">
                    <span id="c-1047920936" class="vote-count">0</span>
                        <a href="javascript:;" id="btn-1047920936" class="j a_show_login" data-cid="1047920936">有用</a>
