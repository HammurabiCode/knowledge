            var cost = new Date() - begin;
            clearTimeout(t);
            submit_result(domain, key, cost);
            set_cookie({ct:'y'});
        });
        $().append(img);
        t = setTimeout(function(){
            submit_result(domain, key, "timedout");
            }, timeout);
    };
    test('img3', '/pics/ct-10k.jpg', 'ct-10k', 10000);
    test('img5', '/pics/ct-10k.jpg', 'ct-10k', 10000);
    test('img1', '/pics/ct-10k.jpg', 'ct-10k', 10000);
    test('www', '/pics/ct-10k.jpg', 'ct-10k', 10000);
});
</script>




    <!-- sindar23d-docker-->

</body>
</html>



































